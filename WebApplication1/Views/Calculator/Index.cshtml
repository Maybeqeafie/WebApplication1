@model WebApplication1.Models.Calculator

@{
    ViewBag.Title = "Index";
}

<div align="center">
    <h2>Simple Calculator</h2> @using (Html.BeginForm())
    {
        <table>
            <tr>
                <th> First Number </th>
                <td> <input type="text"  name="X" class="form-control" /> </td>
            </tr>
            <tr>
                <th> Last Number </th>
                <td> <input type="text"  name="Y" class="form-control" /> </td>
            </tr>
            <tr>
                <th><input type="submit" name="Operation" value="Plus" class="btn btn-primary" /> <input type="submit" name="Operation" value="Minus" class="btn btn-primary" /> </th>
                <th> <input type="submit" name="Operation" value="Multiply" class="btn btn-primary" /> <input type="submit" name="Operation" value="Division" class="btn btn-primary" /> </th>
            </tr>
            <tr>
                <th>Result</th>
                <td>@ViewBag.Result</td>
            </tr>
        </table>   
        }
</div>

